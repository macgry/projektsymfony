{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.user_create'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.user_create'|trans }}</h1>
    {{ form_start(form, { method: 'POST', action: url('user_create') }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-left">
        <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary"/>
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ path('user_index') }}" class="btn btn-link">
            {{ 'action.back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}
