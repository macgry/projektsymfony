{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.user_detail'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.user_detail'|trans({'%id%': user.id|default('')}) }}</h1>

    <a href="{{ url('user_edit', {id: user.id}) }}" title="{{ 'action.edit'|trans }}">
        {{ 'action.edit'|trans }}
    </a>

    {% if user is defined %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ user.id }}</dd>
            <dt>{{ 'label.email'|trans }}</dt>
            <dd>{{ user.email }}</dd>
            <dt>{{ 'label.roles'|trans }}</dt>
            <dd>{{ user.roles|join(', ') }}</dd>
        </dl>

        <p>
            <a href="{{ url('user_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.user_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}
