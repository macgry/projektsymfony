{% extends 'base.html.twig' %}

{% block title %}
    {{ 'User Details' }} {{ user.id|default('') }}
{% endblock %}

{% block body %}
    <h1>{{ 'User Details' }} {{ user.id|default('') }}</h1>

    <a href="{{ url('user_edit', {id: user.id}) }}" title="{{ 'Edit'|trans }}">
        {{ 'Edit'|trans }}
    </a>

    {% if user is defined %}
        <dl class="dl-horizontal">
            <dt>{{ 'ID'|trans }}</dt>
            <dd>{{ user.id }}</dd>
            <dt>{{ 'Email'|trans }}</dt>
            <dd>{{ user.email }}</dd>
            <dt>{{ 'Roles'|trans }}</dt>
            <dd>{{ user.roles|join(', ') }}</dd>
        </dl>

        <p>
            <a href="{{ url('user_index') }}" title="{{ 'Back to list'|trans }}">
                {{ 'Back to list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'User not found.'|trans }}
        </p>
    {% endif %}
{% endblock %}
