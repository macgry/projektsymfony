{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.blog'|trans }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="title_of_page">
            <h1>{{ 'title.blog'|trans }}</h1>
        </div>

        <div class="navigation">
            <ul>
                <a href="{{ path('post_index') }}" class="btn btn-outline-primary">{{ 'menu.posts'|trans }}</a>
                <a href="{{ path('category_index') }}" class="btn btn-outline-primary">{{ 'menu.categories'|trans }}</a>
                {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('user_index') }}" class="btn btn-outline-primary">{{ 'menu.users'|trans }}</a>
                {% endif %}
            </ul>
        </div>
    </div>
{% endblock %}
